{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Pomodoro Timer",
  "version": "0.1.0",
  "identifier": "com.jc539.pomodoro.dekstop",
  "build": {
    "frontendDist": "../dist/pomodoro/browser",
    "devUrl": "http://localhost:4200",
    "beforeDevCommand": "npm start",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "Pomodoro Timer",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources":[
      "sounds/**/*"
    ]
  }
}
